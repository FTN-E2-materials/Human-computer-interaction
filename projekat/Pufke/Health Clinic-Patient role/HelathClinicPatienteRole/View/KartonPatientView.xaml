                <Border Margin="29,11,20,23" Background="#FF148DF0" Grid.ColumnSpan="15" Grid.RowSpan="16" Grid.Row="6" >
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="15"></DropShadowEffect>
                    </Border.Effect>
                </Border>
                <TextBlock Foreground="#FF148DF0" FontSize="40"  HorizontalAlignment="Right" Text="Lekarski karton " Grid.Column="9" Grid.Row="1"  Grid.ColumnSpan="7" Grid.RowSpan="2" />
                <TextBlock Foreground="#FF148DF0" FontSize="40"  Text="{Binding FirstAndLastName}"  Grid.Column="16" Grid.Row="1"  Grid.ColumnSpan="8" Grid.RowSpan="2" />

                <TextBlock Foreground="White" FontSize="28"  HorizontalAlignment="Left" Text="Ime jednog roditelja: " Grid.Column="1" Grid.Row="7"  Grid.ColumnSpan="7" Grid.RowSpan="3" />
                <TextBlock Foreground="White" FontSize="28"  Text="{Binding ParentName}"  Grid.Column="8" Grid.Row="7"  Grid.ColumnSpan="7" Grid.RowSpan="3"  />

                <TextBlock Foreground="White" FontSize="28"  HorizontalAlignment="Left" Text="Datum rođenja: " Grid.Column="1" Grid.Row="9"  Grid.ColumnSpan="5" Grid.RowSpan="3" />
                <TextBlock Foreground="White" FontSize="28"  Text="{Binding DateOfBirth}"  Grid.Column="6" Grid.Row="9"  Grid.ColumnSpan="7" Grid.RowSpan="3"  />

                <TextBlock Foreground="White" FontSize="28"  HorizontalAlignment="Left" Text="JMBG:   " Grid.Column="1" Grid.Row="11"  Grid.ColumnSpan="6" Grid.RowSpan="3"  />
                <TextBlock Foreground="White" FontSize="28"  Text="{Binding Jmbg}"  Grid.Column="3" Grid.Row="11"  Grid.ColumnSpan="7" Grid.RowSpan="3"  />


                <TextBlock Foreground="White" FontSize="28"  HorizontalAlignment="Left" Text="Adresa: " Grid.Column="1" Grid.Row="13"  Grid.ColumnSpan="5" Grid.RowSpan="3"  />
                <TextBlock Foreground="White" FontSize="28"  Text="{Binding Address}"  Grid.Column="4" Grid.Row="13"  Grid.ColumnSpan="15" Grid.RowSpan="3"  />

                <TextBlock Foreground="White" FontSize="28"  HorizontalAlignment="Left" Text="Broj telefona: " Grid.Column="1" Grid.Row="15"  Grid.ColumnSpan="5" Grid.RowSpan="3" />
                <TextBlock Foreground="White" FontSize="28"  Text="{Binding PhoneNumber}"  Grid.Column="6" Grid.Row="15"  Grid.ColumnSpan="7" Grid.RowSpan="3"  />

                <TextBlock Foreground="White" FontSize="28"  HorizontalAlignment="Left" Text="Broj zdravstvenog: " Grid.Column="1" Grid.Row="17"  Grid.ColumnSpan="7" Grid.RowSpan="3"  />
                <TextBlock Foreground="White" FontSize="28"  Text="{Binding HealthInsuranceNumber}"  Grid.Column="7" Grid.Row="17"  Grid.ColumnSpan="7" Grid.RowSpan="3"  />

                <TextBlock Foreground="White" FontSize="28"  HorizontalAlignment="Left" Text="Nosilac zdravstvenog: " Grid.Column="1" Grid.Row="19"  Grid.ColumnSpan="7" Grid.RowSpan="3" />
